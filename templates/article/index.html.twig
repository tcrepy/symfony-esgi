{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <a href="{{ path('article_controller_create') }}">create</a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">name</th>
                <th scope="col">content</th>
                <th scope="col">action</th>
            </tr>
            </thead>
            <tbody>

            {% for article in articles %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td><a href="{{ path('article_controller_show', {'id': article.id}) }}">{{ article.name }}</a></td>
                    <td>{{ article.content }}</td>
                    <td>
                        <a href="{{ path('article_controller_update', {'id': article.id}) }}"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('article_controller_delete', {'id': article.id}) }}"><i class="fas fa-trash-alt text-danger"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <th colspan="100%">Il n'y a aucun article</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
