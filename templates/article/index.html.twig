{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('article_controller_create') }}">create</a>
    {% for article in articles %}
        <p><a href="{{ path('article_controller_show', {'id': article.id}) }}">{{ article.name }}</a> - {{ article.content }} - <a href="{{ path('article_controller_update', {'id': article.id}) }}">Edit</a> - <a href="{{ path('article_controller_delete', {'id': article.id}) }}">delete</a></p>
    {% else %}
        <p>Il n'y a aucun article</p>
    {% endfor %}
</div>
{% endblock %}
